{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cars list sorted by Make</h1>

    <table border="1" style="width:100%">
        <thead >
        <tr >
            <th>Id</th>
            <th>Make</th>
            <th>Model</th>
            <th>Travelleddistance</th>
            <th>Parts</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>


        {% for car in cars %}
            <tr>
                <td><a href="{{ path('car_show', { 'id': car.id }) }}">{{ car.id }}</a></td>
                <td>{{ car.make }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.travelledDistance }}</td>
                {#<td>{{ car.parts|join (',,,') }}</td>#}

                <td>
                    <ul>
                        <li>
                            <a  href="{{ path('car_show', { 'id': car.id }) }}">show</a>
                        </li>
                        <li>
                            <a  href="{{ path('car_edit', { 'id': car.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation text-center" >
        {{ knp_pagination_render(cars) }}
    </div>

{% endblock %}

