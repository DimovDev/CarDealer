{% extends 'base.html.twig' %}

{% block body %}

    <h1>Cars list</h1>
    <a href="{{ path('car_sort') }}">
        Go to Car sorted by Make
        <br>
    </a>  <a href="{{ path('car_sort_with_part') }}">
        Go to Car with part
    </a>
    <table>
        <thead >
            <tr >
                <th>Id</th>
                <th>Make</th>
                <th>Model</th>
                <th>Travelleddistance</th>
                <th>Parts</th>
                <th>Parts Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>


        {% for car in cars %}
            <tr>
                <td><a href="{{ path('car_show', { 'id': car.id }) }}">{{ car.id }}</a></td>
                <td>{{ car.make }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.travelledDistance }}</td>
                <td>{{ car.parts|join (',,,') }}</td>
                <td>{{ car.parts|length }}</td>

                <td>
                    <ul>
                        <li>
                            <a  href="{{ path('car_show', { 'id': car.id }) }}">show</a>
                        </li>
                        <li>
                            <a  href="{{ path('car_edit', { 'id': car.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation text-center" >
        {{ knp_pagination_render(cars) }}
    </div>

{% endblock %}
